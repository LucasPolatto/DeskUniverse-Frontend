    {
        modifier = 0;
        modCounter = 0;

        while (status >= modCounter)
        {
            modifier = (modCounter / 2) - 5;
            modifier = Math.Round(modifier);
            modCounter = modCounter + 1;
        }

        if (modifier >= 0)
